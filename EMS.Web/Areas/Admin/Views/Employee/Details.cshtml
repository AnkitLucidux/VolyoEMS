@model EMS.Web.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Employee Information";

    var profilePicture = "/Images/default_image.jpg";
    if (!string.IsNullOrEmpty(@Model.Employee.ImagePath))
    {
        profilePicture = "/Images/EmployeeImage/" + Model.Employee.ImagePath;
    }
}

<div>
    <h4>@ViewData["Title"]</h4>
    <div class="validation-message">
        @if (TempData["ErrorMessage"] != null)
        {
            <p class="alert-danger">@TempData["ErrorMessage"]</p>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <p class="alert-success">@TempData["SuccessMessage"]</p>
        }
    </div>

    <hr />

    <div class="card mb-0">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="profile-view">
                        <div class="profile-img-wrap">
                            <div class="profile-img">
                                <a asp-action="Edit" asp-route-id="@Model.Employee.EmployeeId"><img alt="" src="@profilePicture"></a>
                            </div>
                        </div>
                        <div class="profile-basic">
                            <div class="row">
                                <div class="col-md-5 profile-info-left">
                                    <div class="">
                                        <h3 class="user-name m-t-0 mb-0">@Model.Employee.FirstName</h3>
                                        <h6 class="text-muted">@Model.Employee.Department.DepartmentName</h6>
                                        <small class="text-muted">@Model.Employee.Designation.DesignationName</small>
                                        <div class="staff-id">Employee ID : @Model.Employee.EmployeeCode</div>
                                        <div class="small doj text-muted">Date of Join : @Model.Employee.JoiningDate</div>
                                    </div>
                                </div>
                                <div class="col-md-7">
                                    <ul class="personal-info">
                                        <li>
                                            <div class="title">
                                                @Html.DisplayNameFor(model => model.Employee.MobileNumber)
                                            </div>
                                            <div class="text">@Model.Employee.MobileNumber</div>
                                        </li>
                                        <li>
                                            <div class="title">@Html.DisplayNameFor(model => model.Employee.EmailAddress)</div>
                                            <div class="text">@Model.Employee.EmailAddress</div>
                                        </li>
                                        <li>
                                            <div class="title">@Html.DisplayNameFor(model => model.Employee.DOB)</div>
                                            <div class="text">@Model.Employee.DOB</div>
                                        </li>
                                        <li>
                                            <div class="title">@Html.DisplayNameFor(model => model.Employee.CommunicationAddress)</div>
                                            <div class="text">@Model.Employee.CommunicationAddress</div>
                                        </li>
                                        <li>
                                            <div class="title">@Html.DisplayNameFor(model => model.Employee.Gender)</div>
                                            <div class="text">@Model.Employee.Gender</div>
                                        </li>
                                        <li>
                                            <div class="title">@Html.DisplayNameFor(model => model.Employee.ReportTo)</div>
                                            <div class="text">
                                                <a href="profile.html">
                                                    @Model.Employee.ReportTo
                                                </a>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="tab-content">
        <!-- Profile Info Tab -->
        <div id="emp_profile" class="pro-overview tab-pane fade show active">
            <div class="row">
                <div class="col-md-12 d-flex">
                    <div class="card profile-box flex-fill">
                        <div class="card-body">
                            <h3 class="card-title">Personal Informations</h3>
                            <ul class="personal-info">
                                <li>
                                    <div class="title">@Html.DisplayNameFor(model => model.Employee.FatherName)</div>
                                    <div class="text">@Model.Employee.FatherName</div>
                                </li>
                                <li>
                                    <div class="title">@Html.DisplayNameFor(model => model.Employee.MotherName)</div>
                                    <div class="text">@Model.Employee.MotherName</div>
                                </li>
                                <li>
                                    <div class="title">@Html.DisplayNameFor(model => model.Employee.AadharNumber)</div>
                                    <div class="text">@Model.Employee.AadharNumber</div>
                                </li>
                                <li>
                                    <div class="title">@Html.DisplayNameFor(model => model.Employee.PanNumber)</div>
                                    <div class="text">@Model.Employee.PanNumber</div>
                                </li>
                                <li>
                                    <div class="title">@Html.DisplayNameFor(model => model.Employee.PassportNumber)</div>
                                    <div class="text">@Model.Employee.PassportNumber</div>
                                </li>
                                <li>
                                    <div class="title">@Html.DisplayNameFor(model => model.Employee.PassportExpDate)</div>
                                    <div class="text">@Model.Employee.PassportExpDate</div>
                                </li>
                                <li>
                                    <div class="title">@Html.DisplayNameFor(model => model.Employee.PhoneNumber)</div>
                                    <div class="text"><a href="">@Model.Employee.PhoneNumber</a></div>
                                </li>
                                <li>
                                    <div class="title">@Html.DisplayNameFor(model => model.Employee.MaritalStatus)</div>
                                    <div class="text">@Model.Employee.MaritalStatus</div>
                                </li>
                                <li>
                                    <div class="title">Qualification</div>
                                    <div class="text">@Model.Employee.Qualification.QualificationName</div>
                                </li>
                                <li>
                                    <div class="title">@Html.DisplayNameFor(model => model.Employee.PermanentAddress)</div>
                                    <div class="text">@Model.Employee.PermanentAddress</div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 d-flex">
                    <div class="card profile-box flex-fill">
                        <div class="card-body">
                            <h3 class="card-title">Experience</h3>
                            <div class="experience-box">
                                <ul class="experience-list">
                                    <li>
                                        <div class="title">@Html.DisplayNameFor(model => model.Employee.TotalExperience)</div>
                                        <div class="text">@Model.Employee.TotalExperience</div>
                                    </li>
                                    <li>
                                        <div class="title">@Html.DisplayNameFor(model => model.Employee.PastExperience)</div>
                                        <div class="text">@Model.Employee.PastExperience</div>
                                    </li>
                                    <li>
                                        <div class="title">@Html.DisplayNameFor(model => model.Employee.PrimarySkills)</div>
                                        <div class="text">@Model.Employee.PrimarySkills</div>
                                    </li>
                                    <li>
                                        <div class="title">@Html.DisplayNameFor(model => model.Employee.SecondarySkills)</div>
                                        <div class="text">@Model.Employee.SecondarySkills</div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /Profile Info Tab -->
    </div>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Employee.EmployeeId">Edit</a>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>

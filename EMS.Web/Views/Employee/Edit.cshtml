@model EMS.Entities.Employee

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

@if (TempData["ErrorMessage"] != null)
{
    <p class="text-danger">@TempData["ErrorMessage"]</p>
}
@if (TempData["SuccessMessage"] != null)
{

@model IEnumerable<EMS.Web.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Users";
}

<h1>@ViewData["Title"]</h1>

<div class="validation-message">
    @if (TempData["ErrorMessage"] != null)
    {
        <p class="alert-danger">@TempData["ErrorMessage"]</p>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <p class="alert-success">@TempData["SuccessMessage"]</p>
    }
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayName("Name")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => user.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.RoleName)
                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@user.UserId" method="post">
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@user.UserId">Edit</a>
                        @*<a class="btn btn-info" asp-action="Details" asp-route-id="@user.UserId">Details</a>*@
                        @if (user.IsActive && !user.IsDeleted)
                        {
                            <a class="btn btn-danger" asp-action="Deactivate" asp-route-id="@user.UserId" asp-route-type="deactive">Deactivate</a>
                        }
                        else
                        {
                            <a class="btn btn-success" asp-action="Activate" asp-route-id="@user.UserId" asp-route-type="active">Activate</a>
                        }
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete user : @user.UserName ?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
